<xs:schema attributeFormDefault="unqualified" elementFormDefault="qualified"
           targetNamespace="http://netflix.com/imf/itunes/chapters"
           xmlns="http://netflix.com/imf/itunes/chapters"
           xmlns:i="http://apple.com/itunes/importer"
           xmlns:xs="http://www.w3.org/2001/XMLSchema">

    <xs:import schemaLocation="../metadata/iso-3166-1.xsd" namespace="http://iso3166.metadata.itunes.imfutility.netflix.com"/>
    <xs:import schemaLocation="../metadata/itunes-metadata.xsd" namespace="http://apple.com/itunes/importer"/>

    <!-- root element -->
    <xs:element name="chapters" type="ChaptersInputType"/>

    <xs:complexType name="ChaptersInputType">
        <xs:sequence>
            <xs:element name="timecode_format" type="i:TimecodeFormatType" minOccurs="0"/>
            <xs:element name="chapter" type="ChapterInputType" minOccurs="1" maxOccurs="99"/>
        </xs:sequence>
        <xs:attribute name="basedir" type="xs:string" use="required"/>
    </xs:complexType>

    <xs:complexType name="ChapterInputType">
        <xs:sequence>
            <xs:element name="start_time" type="i:TimecodeFormat"/>
            <xs:choice>
                <xs:element name="title" type="i:TitleType"/>
                <xs:element name="titles" type="i:TitlesType"/>
            </xs:choice>
            <xs:element name="file_name" type="i:FileNameType"/>
        </xs:sequence>
    </xs:complexType>

</xs:schema>
